<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context=".MainActivityFragment"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="1"
                android:id="@+id/step1"
                android:enabled="false"
                android:layout_gravity="right"
                android:gravity="right"
                android:paddingLeft="@dimen/defaultPadding"
                android:paddingRight="@dimen/defaultPadding"
                android:paddingTop="@dimen/thickPadding"
                android:paddingBottom="@dimen/thickPadding"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Get root"
                android:id="@+id/getRoot"
                android:enabled="false"
                android:clickable="true"
                android:paddingLeft="@dimen/defaultPadding"
                android:paddingRight="@dimen/defaultPadding"
                android:paddingTop="@dimen/thickPadding"
                android:paddingBottom="@dimen/thickPadding"/>
            <ProgressBar
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gettingRoot"
                android:indeterminateOnly="true"
                android:indeterminate="true"
                android:paddingLeft="@dimen/defaultPadding"
                android:paddingRight="@dimen/defaultPadding"
                android:paddingTop="@dimen/thickPadding"
                android:paddingBottom="@dimen/thickPadding"
                android:visibility="invisible"
                android:layout_gravity="center"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="2"
                android:id="@+id/step2"
                android:enabled="false"
                android:layout_gravity="right"
                android:gravity="right"
                android:paddingLeft="@dimen/defaultPadding"
                android:paddingRight="@dimen/defaultPadding"
                android:paddingTop="@dimen/thickPadding"
                android:paddingBottom="@dimen/thickPadding"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Load your music"
                android:id="@+id/findMusic"
                android:enabled="false"
                android:clickable="true"
                android:paddingLeft="@dimen/defaultPadding"
                android:paddingRight="@dimen/defaultPadding"
                android:paddingTop="@dimen/thickPadding"
                android:paddingBottom="@dimen/thickPadding"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/songCount"
                android:padding="@dimen/thickPadding"
                android:enabled="false"
                android:layout_gravity="right"
                android:gravity="right"
                android:paddingLeft="@dimen/defaultPadding"
                android:paddingRight="@dimen/defaultPadding"
                android:paddingTop="@dimen/thickPadding"
                android:paddingBottom="@dimen/thickPadding"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="3"
                android:id="@+id/step3"
                android:enabled="false"
                android:layout_gravity="right"
                android:gravity="right"
                android:paddingLeft="@dimen/defaultPadding"
                android:paddingRight="@dimen/defaultPadding"
                android:paddingTop="@dimen/thickPadding"
                android:paddingBottom="@dimen/thickPadding"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Fix your tags"
                android:id="@+id/fixMusic"
                android:enabled="false"
                android:clickable="true"
                android:paddingLeft="@dimen/defaultPadding"
                android:paddingRight="@dimen/defaultPadding"
                android:paddingTop="@dimen/thickPadding"
                android:paddingBottom="@dimen/thickPadding"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop!"
                android:id="@+id/stopFixing"
                android:layout_gravity="right"
                android:visibility="invisible"/>

        </TableRow>
    </TableLayout>


    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_gravity="center_horizontal"
        android:progress="0"
        android:indeterminate="false"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:showDividers="middle"
        android:id="@+id/songDetails"
        android:visibility="invisible">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/defaultPadding"
            android:dividerPadding="@dimen/defaultPadding"
            android:measureWithLargestChild="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Artist"
                android:enabled="false"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/defaultPadding"
                android:layout_column="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/artistValue"
                android:layout_column="2"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/defaultPadding"
            android:dividerPadding="@dimen/defaultPadding"
            android:measureWithLargestChild="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Album"
                android:enabled="false"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/defaultPadding"
                android:layout_column="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/albumValue"
                android:layout_column="2"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/defaultPadding"
            android:dividerPadding="@dimen/defaultPadding"
            android:measureWithLargestChild="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Year"
                android:enabled="false"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/defaultPadding"
                android:layout_column="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/yearValue"
                android:layout_column="2"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/defaultPadding"
            android:dividerPadding="@dimen/defaultPadding"
            android:measureWithLargestChild="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Track"
                android:enabled="false"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/defaultPadding"
                android:layout_column="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/trackValue"
                android:layout_column="2"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/defaultPadding"
            android:dividerPadding="@dimen/defaultPadding"
            android:measureWithLargestChild="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Title"
                android:enabled="false"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/defaultPadding"
                android:layout_column="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/titleValue"
                android:layout_column="2"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/defaultPadding"
            android:dividerPadding="@dimen/defaultPadding"
            android:measureWithLargestChild="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="File"
                android:enabled="false"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/defaultPadding"
                android:layout_column="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/fileValue"
                android:layout_column="2"/>
        </TableRow>
    </TableLayout>

</LinearLayout>
